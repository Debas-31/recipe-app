<section class="container">
  <h2 class="text-center my-4"><%= @recipe.name %></h2>

  <div class="d-flex justify-content-be">
    <p>Preparation time : <%= @recipe.preparation_time %></p>
    <p class="text-left">Public :</p>
  <%= button_to  recipe_path(@recipe.id), :method => :patch, class: "align-self-end" do %>
      <% if @recipe.public %>
        <i class="fa fa-toggle-on" style="font-size:28px;color:green"></i>
      <% end %>
      <% if !@recipe.public %>
         <i class="fa fa-toggle-off" style="font-size:28px;color:green;border:none"></i>
      <% end %>
    <% end %>
  </div>
  <div>
    <p>Cooking time : <%= @recipe.cooking_time %></p>
  </div>
  <div>
    <p>Steps goes here ...</p>
  </div>

  <div>
   <button class='btn btn-outline-info'>
   <%= link_to 'Add incredient', new_recipe_recipe_food_path(@recipe.id), class: "nav-link" %>
 </button> 
   </div>

   <table class="table m-3">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Quantity</th>
        <th scope="col">Value</th>
        <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">Apple </th>
        <td> 20g </td>
        <td> <%= 5*20 %></td>
        <td> 
          <button>Modify</button>
          <button>Remove</button>
        </td>
      </tr>
   </tbody>
  </table>
</section>